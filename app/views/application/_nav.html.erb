<nav class="primary">
  <% t2_applications.each do |application| %>
    <a target="_parent" href="<%= add_query_param(application.url, "authentication_token", current_user.authentication_token) %>" title="<%= application.title %>" target="main_window">
      <span class="icon"><%= application.icon %></span>
      <strong><%= application.title.downcase %></strong>
    </a>
  <% end %>

  <a href="http://neo.com" class="logo" title="The Lean Innovation Company">
    neo
  </a>
  <%= link_to settings_app_url, class: "settings", target: "_parent" do %>
    <span class="icon">s</span>
    <strong>settings</strong>
  <% end %>
  <a href="/users/sign_out" target="_parent" class="exit" title="Logout"><span class="icon">q</span>
  <strong>sign out</strong>
  </a>
</nav>

